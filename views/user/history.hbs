    #sidebar {
        position: fixed;
        top: 0;
        bottom: 0;
    }

    .history-container {
        display: flex;
        flex-wrap: wrap;
    }

    .history-card {
        background-color: rgba(255, 255, 255, 0.9);
        border: 1px solid #ddd;
        border-radius: 10px;
        margin: 10px;
        padding: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        flex: 1;
    }

    .history-card-content {
        text-align: center;
    }

    .history-action {
        font-size: 18px;
        margin: 5px 0;
    }

    .history-date {
        color: #888;
    }
</style>