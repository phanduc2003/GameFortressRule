<div class="container mt-3">
    <form action="/towers/new?id={{userId}}" method="post" enctype="multipart/form-data">
        <legend>Insert Tower</legend>
        {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
            {{errorMessage}}
        </div>
        {{/if}}
        <div class="mb-3">
            <label for="disabledTextInput" class="form-label">Name Tower: </label>
            <input type="text" id="disabledTextInput" class="form-control" name="nameTower" placeholder="Name Tower">
        </div>
        <div class="mb-3">
            <label for="disabledTextInput" class="form-label">Level Tower: </label>
            <input type="text" id="disabledTextInput" class="form-control" name="levelTower" placeholder="Level Tower">
        </div>
        <div class="mb-3">
            <label for="disabledTextInput" class="form-label">Describe: </label>
            <input type="text" id="disabledTextInput" class="form-control" name="describe" placeholder="Describe">
        </div>
        <div class="mb-3">
            <label for="formFileSm" class="form-label">Image: </label>
            <input type="file" name="image" id="image" value="{{tw.image}}" onchange="loadFile(event);" /> <br />
            <img width="100" height="100" id="img-display" alt="Image" src="{{image}}" />
        </div>
        <button type="submit" class="btn btn-outline-success">Submit</button>
    </form>
</div>

<script>

    const loadFile = function (event) {
        const reader = new FileReader();
        reader.onload = function () {
            var output = document.getElementById('img-display');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    };

</script>