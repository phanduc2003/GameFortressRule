<style>
    body {
        background-image: url('images/backLogin.jpg');
        background-size: 100% 100%;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .custom-container {
        background-color: rgba(34, 34, 34, 0.8);
        padding: 20px;
        border-radius: 5px;
        margin-top: 20px;
    }

    .custom-heading {
        color: rgb(229, 169, 17);
    }
</style>

<div class=" mt-5 container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="custom-container">
                <form method="POST" action="/login" class="p-3">
                    <h2 class="mb-3 custom-heading">Login</h2>
                    {{#if error}}
                    <div class="alert alert-danger" role="alert">
                        {{error}}
                    </div>
                    {{/if}}
                    <div class="mb-3">
                        <label for="txtUsername" class="form-label">Username:</label>
                        <input type="text" id="txtUsername" class="form-control" name="txtUsername" required>
                    </div>
                    <div class="mb-3">
                        <label for="txtPassword" class="form-label">Password:</label>
                        <input type="password" id="txtPassword" class="form-control" name="txtPassword" required>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                    <p class="mt-3">Don't have an account? <a href="/signup">Sign up now</a></p>
                </form>
            </div>
        </div>
    </div>
</div>